{
  "openapi": "3.0.3",
  "info": {
    "title": "Online Store API",
    "description": "the sale of Christian music",
    "version": "1.0.0"
  },
  "paths": {
    "/api/customer-info/getProducts": {
      "get": {
        "description": "display products after user is authenticated and verified",
        "operationId": "getProducts",
        "parameters": [
          {
            "name": "email", 
            "in": "query",
            "description": "Customer's email",
            "required": true,
            "schema": {
              "type": "string"
            }
          },

          {
            "name": "password",  
            "in": "query",
            "description": "Customer's password",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "All products displayed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/customer"
                }
              }
            }
          }
        }
      }
    },
    "/api/customer-info/authentication": {
      "get": {
        "description": "get customer details based on email and password",
        "operationId": "getCustomerInfo",
        "parameters": [
          {
            "name": "email", 
            "in": "query",
            "description": "Customer's email",
            "required": true,
            "schema": {
              "type": "string"
            }
          },

          {
            "name": "password",  
            "in": "query",
            "description": "Customer's password",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "customer's profile displayed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/customer"
                }
              }
            }
          }
        }
      }
    },
    
    "/api/customer-info/addCustomer": {
      "post": {
        "description": "Add new customer",
        "operationId": "createCustomer",
        "parameters": [
          {
            "name": "first_name",
            "in": "query",
            "description": "Customer's first name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "last_name",
            "in": "query",
            "description": "Customer's last name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "email",
            "in": "query",
            "description": "Customer's email",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "query",
            "description": "Customer's password",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "phone_number",
            "in": "query",
            "description": "Customer's phone number",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Customer's created sucessfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/customer"
                }
              }
            }
          }
        }
      }
    },


    "/api/customer-info/addOrderRecord": {
      "post": {
        "description": "Add customer order",
        "operationId": "createOrder",
        "parameters":[
          {
            "name": "customer_id",
            "in":"query",
            "description": "customer's id",
            "required": true,
            "schema":{
              "type":"integer"
            }
          },

          {
            "name": "subtotal",
            "in":"query",
            "description": "Total price of all items in the order (excluding shipping cost)",
            "required": true,
            "schema":{
              "type":"number",
              "format":"double"
            }
          },

          {
            "name": "shipping_fee",
            "in":"query",
            "description": "Shipping fee applied to the order",
            "required": true,
            "schema":{
              "type":"number",
              "format":"double"
            }
          },

          {
            "name": "total_amount",
            "in":"query",
            "description": "Final total price of the order (including shipping cost)",
            "required": true,
            "schema":{
              "type":"number",
              "format":"double"
            }
          }

        ],
        "responses": {
          "201": {
            "description": "Customer's order added successfully",
            "content":{
              "application/json": {
                "schema":{
                  "$ref":"#/components/schemas/orderRecord"
                }
              }
            }
          }
        }
      }
    },

    "/api/customer-info/addOrderItem": {
      "post":{
        "description":"Add customer order items",
        "operationId":"createOrderItems",
        "parameters":[
          {
            "name":"order_id",
            "in":"query",
            "description": "order's id",
            "required": true,
            "schema":{
              "type":"integer"
            }
          },
          {
            "name":"product_id",
            "in":"query",
            "description": "product's id",
            "required": true,
            "schema":{
              "type":"integer"
            }
          },
          {
            "name":"unit_price",
            "in":"query",
            "description": "product's unit price",
            "required": true,
            "schema":{
              "type":"number",
              "format":"double"
            }
          },
          {
            "name":"quantity",
            "in":"query",
            "description": "product's quantity",
            "required": true,
            "schema":{
              "type":"integer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Customer's order items added sucessfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/orderItem"
                }
              }
            }
          }
        }

      }
    },
    "/api/customer-info/getProfile": {
      "get":{
        "parameters":[
          {
            "name":"customer_id",
            "in":"query",
            "description": "customer's id",
            "required": true,
            "schema":{
              "type":"integer"
            }
          }
        ],
        "responses":{
          "200":{
            "description": "customer's profile displayed successfully",
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"#/components/schemas/customer"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "customer": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "integer"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "phone_number": {
            "type": "string"
          }
        }
      },
      "orderRecord": {
        "type":"object",
        "properties": {
          "customer_id": {
            "type":"integer"
          },
          "subtotal": {
            "type":"number",
            "format":"double"
          },
          "shipping_fee": {
            "type":"number",
            "format":"double"
          },
          "total_amount": {
            "type":"number",
            "format":"double"
          }
        }
      },
      "orderItem": {
        "type": "object",
        "properties": {
          "order_id": {
            "type":"integer"
          },
          "product_id": {
            "type":"integer"
          },
          "unit_price": {
            "type":"number",
            "format": "double"
          },
          "quantity": {
            "type":"integer"
          } 
        }
      }
    }
  }
}